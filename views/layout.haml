- title = "Blockchain Visualization"
!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %title #{title}
    = assets :css

  %body{ class: body_class }
    .container
      .right.set_fonts
        %a.btn{ data: {dir: "increase"} } +
        \/
        %a.btn{ data: {dir: "decrease"} } -


      %h1
        %a{ href: "/" } #{title}
      /
        %nav
          %a.btn{ href: "/blocks" } Blocks

      %section.content
        = assets :js
        = yield

    -# FIXME
    -#
    -# assets :js
    = content_for :js
    :coffee
      curSize = 14
      $(".set_fonts .btn").on "click", (evt) ->
        console.log evt.target.dataset
        if (evt.target.dataset.dir == "increase")
          curSize += 2
        else
          curSize -= 2

        $('.container').css 'font-size', curSize
